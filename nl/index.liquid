<section class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
    {% for service in services.nl %}
        <div class="col">
            <div class="card service-card mx-auto">
                <img alt="{{ service.imgAlt }}" class="card-img-top img-fluid service-img" loading="lazy"
                     src="{{ service.imgSrc }}">
                <div class="card-body">
                    <h2 class="card-title">{{ service.title }}</h2>
                    <p class="card-text service-text">{{ service.description }}</p>
                    <a class="btn btn-primary" href="{{ service.buttonLink }}" role="button">Meer leren</a>
                </div>
            </div>
        </div>
    {% endfor %}
</section>

<section class="my-4">
    <h2 class="mb-3">Kostenberekenaar voor chauffeurs</h2>
    <form class="cost-form">
        <div class="mb-3">
            <div class="mb-1">
                <label class="form-label" for="distance">Afstand[km] (enkele reis):</label>
                <input class="form-control" id="distance" name="distance"
                       onchange="calculateCost()" required type="number">
            </div>
            <label class="form-check-label" for="return">Retourreis</label>
            <input class="form-check-input" id="return" name="return" oninput="calculateCost()"
                   type="checkbox">
        </div>

        <label class="form-label" for="hours">Uren op bestemming:</label>
        <input class="form-control" id="hours" name="hours" oninput="calculateCost()" required
               type="number">
        <p><strong id="totalCost">Total Cost: </strong></p>
    </form>
</section>
